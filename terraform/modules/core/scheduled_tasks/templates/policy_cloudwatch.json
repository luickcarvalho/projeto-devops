{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ecs:RunTask"
      ],
      "Resource": [ 
        "${task_arn}"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [ "*" ],
      "Condition": {
         "StringLike": {
           "iam:PassedToService": "ecs-tasks.amazonaws.com"
         }
      }
    }
  ]
}
